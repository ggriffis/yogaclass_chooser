<h1>Listing teachers</h1>
<%= link_to 'New Teacher', new_teacher_path, class: "btn btn-link" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Like</th>
      <th>Not my Favorite</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.like %></td>
        <td><%= teacher.not_my_favorite %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
